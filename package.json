{
  "name": "beer-lib",
  "description": "A simple lib to save and to rank beers of the world",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipetrova/beer-lib.git"
  },
  "author": "felipetrova <felipee.trova@gmail.com> (http://www.felipetrova.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/felipetrova/beer-lib/issues"
  },
  "homepage": "https://github.com/felipetrova/beer-lib#readme",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src",
    "fix": "./node_modules/.bin/eslint src --fix",
    "reporter": "./node_modules/.bin/parker ./build/css/",
    "precommit": "npm run lint",
    "watchify": "watchify -vd -p browserify-hmr -e src/js/main.js -o build/js/main.js",
    "serve": "json-server --watch cervejas.json --static ./build/",
    "gulp": "gulp",
    "dev": "npm-run-all --parallel watchify serve gulp",
    "build": "cross-env NODE_ENV=production browserify src/js/main.js | uglifyjs -c warnings=false -m > build/js/main.js",
    "test": "npm run lint && npm run reporter"
  },
  "dependencies": {
    "bulma": "^0.2.3",
    "font-awesome": "^4.7.0",
    "sweetalert": "^1.1.3",
    "vue": "^1.0.0",
    "vue-resource": "^1.0.3"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-hmr": "^0.3.1",
    "browser-sync": "^2.12.3",
    "cross-env": "^1.0.6",
    "eslint": "^3.6.0",
    "gulp": "^3.9.1",
    "gulp-cheerio": "^0.6.2",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.1",
    "gulp-data": "^1.2.1",
    "gulp-group-css-media-queries": "^1.1.0",
    "gulp-imagemin": "^3.0.1",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.1.0",
    "gulp-pug": "^3.0.3",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-stylus": "^2.3.1",
    "gulp-svgmin": "^1.2.2",
    "gulp-svgstore": "^6.0.0",
    "gulp-uglify": "^2.0.0",
    "gulp-vue-module": "^0.1.2",
    "gulp-vueify": "0.0.3",
    "husky": "^0.11.4",
    "http-server": "^0.9.0",
    "js-yaml": "^3.6.1",
    "lost": "^7.1.0",
    "mdcss": "^1.5.1",
    "mdcss-theme-github": "^2.0.0",
    "npm-run-all": "^1.6.0",
    "parker": "0.0.10",
    "postcss-font-magician": "^1.4.0",
    "poststylus": "^0.2.3",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rucksack-css": "^0.8.5",
    "rupture": "^0.6.1",
    "uglify-js": "^2.5.0",
    "vueify": "^8.5.2",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  }
}
