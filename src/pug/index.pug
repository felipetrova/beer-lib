doctype html
html
  head
    title #{config.title} - #{config.description}
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description' content="meta desc")
    meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')

    //- Essential Meta Tags for Social Media
    //- --------------------------------------------------
    meta(property='og:title' content='')
    meta(property='og:description' content='')
    meta(property='og:image' content='')
    meta(property='og:url' content='')
    meta(name='twitter:card' content='photo')
    meta(name='twitter:site' content='')
    meta(name='twitter:title' content='')
    meta(name='twitter:image' content='')
    meta(name='twitter:url' content='')

    //- Webapp
    //- -------------------------------------------------- 
    link(rel='apple-touch-icon' sizes='180x180' href='/favicon/apple-touch-icon.png')
    link(rel='icon' type='image/png' href='/favicon/favicon-32x32.png' sizes='32x32')
    link(rel='icon' type='image/png' href='/favicon/favicon-16x16.png' sizes='16x16')
    link(rel='manifest' href='/manifest.json')
    link(rel='mask-icon' href='/favicon/safari-pinned-tab.svg' color='#5bbad5')
    meta(name='apple-mobile-web-app-title' content='#{config.title}')
    meta(name='application-name' content='#{config.title}')
    meta(name='theme-color' content='#ffffff')

    //- Stylesheet
    //- --------------------------------------------------
    link(rel="stylesheet", type="text/css", href="css/bulma.css")
    link(rel="stylesheet", type="text/css", href="css/font-awesome.min.css")
    link(rel="stylesheet", type="text/css", href="css/sweetalert.css")

    link(rel="stylesheet", type="text/css", href="css/style.css")

    //- GA
    //- --------------------------------------------------
    if ((config) && (config.analytics) && (config.analytics.ga))
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', '#{config.analytics.ga}', 'auto');
        ga('send', 'pageview');


  body

    //- Put your content here
    //- --------------------------------------------------
    header.container
      .columns
        .column.is-4
          img(src="img/beerlib-h.png", alt="BeerLib", class="logo")
          //- h1 #{config.title}
        .column.is-8
          p.desc-about #{config.description}

    app


        


    //- Scripts
    //- --------------------------------------------------
    script(src='js/sweetalert.min.js')
    script(src='js/main.js')
